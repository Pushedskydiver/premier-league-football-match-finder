{
  "extends": "eslint-config-synacor",
  "env": {
    "node": true,
    "es6": true
  },
  "plugins": [
    "react-hooks"
  ],
  "rules": {
    "brace-style": "off",
    "indent": [
      1,
      2
    ],
    "react/jsx-indent-props": "off",
    "react/jsx-max-props-per-line": "off",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  },
  "globals": {
    "document": true,
    "window": true,
    "localStorage": true,
    "sessionStorage": true,
    "expect": true
  }
}
